---
- hosts: nodebox  

  tasks:

    - name: update apt cache
      apt: update_cache=yes cache_valid_time=3600
      sudo: yes

    - name: generate locale
      command: locale-gen en_US.UTF-8
      sudo: yes

    - name: install packages
      apt: pkg="{{ item }}" state=latest
      sudo: yes
      with_items:
        - build-essential
        - git
        - tree
        - apache
